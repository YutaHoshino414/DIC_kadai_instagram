<div class="bg-light p-3 p-sm-5 my-4 rounded">
  <h1>アカウント新規登録</h1>
</div>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>  
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :email %>
  <%= f.email_field :email %><br>
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br><br>
  <%= f.label :image %>
  <%= f.file_field :image %><br><br>

  <%= f.submit "アカウント登録", class: "btn btn-lg, btn-primary" %>
<% end %><br>
<%= link_to "みんなの投稿はこちら", pictures_path %>