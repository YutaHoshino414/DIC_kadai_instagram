<h1>ユーザー情報編集</h1>
  <%= form_with(model: @user, local: true) do |f| %>  
    <p>設定画像：<%= image_tag(@user.image.url) if @user.image && @user.image.url %></p><br>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :email %>
    <%= f.email_field :email %><br>
    <%= f.label :password %>
    <%= f.hidden_field :password, value: @user.password_digest %><br>
    <%= f.label :password_confirmation %>
    <%= f.hidden_field :password_confirmation, value: @user.password_digest %><br>
    <%= f.hidden_field :image_cache %>
    <%= f.label :image %>
    <%= f.file_field :image %><br><hr>
    <%= f.submit "編集する" %>
  <% end %>
  <%= link_to 'Myページに戻る', user_path(@user.id) %>