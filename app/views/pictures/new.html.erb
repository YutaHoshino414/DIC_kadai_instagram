<div class="bg-light p-3 p-sm-5 my-4 rounded">
  <h1>新規投稿</h1>
</div>

<% if @picture.errors.any? %>
    <div>
      <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
<% end %>
<h3>投稿する</h3><br>
  <div class="w-50 mx-auto">
    <%= form_with(model: @picture, local: true, url: confirm_pictures_path ) do |form| %>
      <div class="mb-3">
        <%= form.label :content %>
        <%= form.text_field :content, class: "form-control" %>
      </div><br>
      <div>
        <%= form.label :image %>
        <%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %>
        <%= form.file_field :image,  class: "btn btn-lg, btn-secondary" %>
        <%= form.hidden_field :image_cache %>
      </div>
      <br>
      <%= form.submit '投稿する',  class: "btn btn-lg, btn-primary" %>
    <% end %>
  </div>
