<div class="bg-light p-3 p-sm-5 my-4 rounded">
  <h1>ログインはこちら</h1>
</div>
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %><br><br>
  <%= f.label :password %>
  <%= f.password_field :password %> <br><br>
  <%= f.submit "ログインする",  class: "btn btn-lg, btn-primary" %>
<% end %><br><hr>
<%= link_to "新規アカウント登録はこちら", new_user_path %><br>
<%= link_to "みんなの投稿はこちら", pictures_path %>